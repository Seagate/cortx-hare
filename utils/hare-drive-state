set -eu -o pipefail
# set -x
export PS4='+ [${BASH_SOURCE[0]##*/}:${LINENO}${FUNCNAME[0]:+:${FUNCNAME[0]}}] '

# :help: post drive event to Motr

PROG=${0##*/}

usage() {
    cat <<EOF
Usage: $PROG [<option>]

Post drive events to Motr

Options:
  --json <json-payload> Payload to set device state.
                        payload format:
                        {
                          "node" : "ssc-vm-c-0553.colo.seagate.com",
                          "source_type" : "drive",
                          "device" : "/dev/vdb"
                          "state" : "FAILED",
                        }
  -h, --help            Show this help and exit.
EOF
}

TEMP=$(getopt --options h: \
              --longoptions help,json: \
              --name "$PROG" -- "$@" || true)

echo $?

(($? == 0)) || { usage >&2; exit 1; }

eval set -- "$TEMP"

payload=

while true; do
    case "$1" in
        -h|--help)           usage; exit ;;
        --json)              payload=$2; shift 2 ;;
        --)                  shift; break ;;
        *)                   break ;;
    esac
done

[[ $payload ]] || { usage >&2; exit 1; }

die() {
    echo "$PROG: $*" >&2
    exit 1
}

state_set() {
    h0q eq 'device-state-set' "$payload"
}

state_get() {
    #Implement me.
    :
}

if [[ $payload ]]; then
    state_set
else
    state_get
fi
