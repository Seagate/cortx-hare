{
  "server": true,
  "leave_on_terminate": true,
  "watches": [
    {
      "type": "key",
      "key": "leader",
      "args": [ "/opt/seagate/cortx/hare/libexec/elect-rc-leader", "--conf-dir", "TMP_CONF_DIR" ]
    },
    {
      "type": "keyprefix",
      "prefix": "bq/",
      "handler_type": "http",
      "http_handler_config": {
        "path": "http://localhost:8008/watcher/bq",
        "method": "POST",
        "timeout": "10s"
      }
    },
    {
      "type": "service",
      "service": "confd",
      "handler_type": "http",
      "http_handler_config": {
        "path": "http://localhost:8008",
        "method": "POST",
        "timeout": "10s"
      }
    },
    {
      "type": "service",
      "service": "confd",
      "args": [ "/opt/seagate/cortx/hare/libexec/consul-watch-handler" ]
    },
    {
      "type": "service",
      "service": "ios",
      "handler_type": "http",
      "http_handler_config": {
        "path": "http://localhost:8008",
        "method": "POST",
        "timeout": "10s"
      }
    },
    {
      "type": "service",
      "service": "ios",
      "args": [ "/opt/seagate/cortx/hare/libexec/consul-watch-handler" ]
    },
    {
      "type": "service",
      "service": "s3service",
      "handler_type": "http",
      "http_handler_config": {
        "path": "http://localhost:8008",
        "method": "POST",
        "timeout": "10s"
      }
    },
    {
      "type": "service",
      "service": "s3service",
      "args": [ "/opt/seagate/cortx/hare/libexec/consul-watch-handler" ]
    }
  ],
  "enable_local_script_checks": true,
  "services": []
}
